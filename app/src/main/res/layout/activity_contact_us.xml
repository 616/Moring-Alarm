<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joe.lazyalarm.activity.ContactUsActivity">
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/lightblue"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_me_contact"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me"
                />
            <TextView
                android:id="@+id/tv_me_contact"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_me_contact"
                style="@style/HelpTextTitle"
                android:text="微博:黑丫山上小旋风"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                />
            <TextView

                android:layout_below="@id/tv_me_contact"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_me_contact"
                style="@style/HelpTextTitle"
                android:text="一个努力想成为程序员和民谣歌手的神经病人"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/lightblue"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/ContactTextTitle"
                android:text="如果您对Morning有好的意见或建议"
                />
            <TextView
                style="@style/ContactTextTitle"
                android:text="可以通过微博联系我"
                />
            <TextView
                style="@style/ContactTextTitle"
                android:text="如果你也是一个开发者欢迎骚扰交流"
                />
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/contact_pic"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                />
            <TextView
                style="@style/ContactTextTitle"
                android:text="(图片素材来自pixabay)"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
